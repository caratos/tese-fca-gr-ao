\newcommand{\categoria}[2]
{
  \begin{tabular}[h]{c}
   $\underbrace{\textrm{\emph{#1}}}$ \\ 
   #2
  \end{tabular}
}

\newcommand{\oracao}[2]
{
  \categoria{#1}{Sujeito} \categoria{#2}{Predicado}
}

